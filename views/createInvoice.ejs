<%- include('./partials/header'); %>
    <div class="flex-auto w-full p-10 mt-20">

      <form
      action="/signup"
      method="post"
        class="bg-transparent shadow-xl space-y-5  border-2 p-8 w-full"
      >
        <div
          class="text-start text-4xl  font-extrabold"
